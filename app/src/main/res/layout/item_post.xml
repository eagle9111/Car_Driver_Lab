<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <!-- Car Image -->
        <ImageView
            android:id="@+id/imageViewCar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
           />

        <!-- Car Name -->
        <TextView
            android:id="@+id/textCarName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <!-- Car Details -->
        <TextView
            android:id="@+id/textAcceleration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acceleration: 0 m/s²" />

        <TextView
            android:id="@+id/textDeceleration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deceleration: 0 m/s²" />

        <TextView
            android:id="@+id/textMaxSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Speed: 0 km/h" />
        <Button
            android:id="@+id/btnDeletePost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_marginTop="8dp"
            android:backgroundTint="@android:color/holo_red_light"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
